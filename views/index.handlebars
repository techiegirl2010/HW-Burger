<h1>Cats!</h1>

<h2>Cats that are not sleepy!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <p>{{this.id}}. {{this.burger_name}}</p>
      <form class="button devour-form">
          <input type="hidden" type="text" value={{this.id}}><br>
          <button type="submit" class="btn btn-default">Devour</button>
      </form> 
    {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <p>{{this.id}}. {{this.burger_name}}</p>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Cat</h2>
<form action ="burgers/create" class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
